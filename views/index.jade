extends layout

block content
  nav.navbar.navbar-default.default-margins(role='navigation')
    .container-fluid
      .navbar-header
        a.navbar-brand(href='javascript:void(0)') #{appname}
      button.btn.btn-default.navbar-btn(type='button') Accounts
      button.btn.btn-default.navbar-btn.default-left-margin(type='button') Contacts
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.dropdown-toggle(href='javascript:void(0)', data-toggle='dropdown')
            span.glyphicon.glyphicon-user
            span &nbsp;
            span Viraj Chitnis
            span &nbsp;
            span.caret
          ul.dropdown-menu(role='menu')
            li
              a(href='javascript:void(0)') Logout
  #toolbar
    button.btn.btn-primary.btn-sm(title='Add an entry')
      span.glyphicon.glyphicon-plus
      span &nbsp;Add
    button.btn.btn-warning.btn-sm.default-left-margin(title='Edit an entry')
      span.glyphicon.glyphicon-pencil
      span &nbsp;Edit
    button.btn.btn-danger.btn-sm.default-left-margin(title='Delete an entry')
      span.glyphicon.glyphicon-trash
      span &nbsp;Delete
    .dropdown.float-right
      button#settings-dropdown.btn.btn-default.btn-sm.dropdown-toggle(type='button', data-toggle='dropdown')
        span.glyphicon.glyphicon-cog
        span &nbsp;Settings&nbsp;
        span.caret
      ul.dropdown-menu.dropdown-menu-right(role='menu', aria-labelledby='settings-dropdown')
        li#enableTableBordersButton(role='presentation')
          a(role='menuitem', tabindex='-1', href='javascript:void(0)')
            span Table borders
    .dropdown.float-right.default-right-margin
      button.btn.btn-default.btn-sm.dropdown-toggle(type='button', data-toggle='dropdown')
        span Sort by month&nbsp;
        span.caret
      ul.dropdown-menu.dropdown-menu-right(role='menu', aria-labelledby='settings-dropdown')
        li(role='presentation')
          a(role='menuitem', tabindex='-1', href='javascript:void(0)')
            span Apr '13
        li(role='presentation')
          a(role='menuitem', tabindex='-1', href='javascript:void(0)')
            span May '13
        li(role='presentation')
          a(role='menuitem', tabindex='-1', href='javascript:void(0)')
            span June '13
  #table-wrapper
    table#accountsTable.table.table-striped.table-hover
      tr
        th
        th Memo No.
        th Date
        th Partner
        th Solicitor/Client
        th Suit No.
        th Name of the party
        th Particulars
        th Fees (&#8377;)
        th Fees Recd.
        th Bal (&#8377;)
        th Dt of Recpt
        th Cheque No.
        th Cheque Dt.
        th Drawn on
        th Received from
      tr
        td
          input(type='checkbox', name='id', value='the_id')
        td 001/04/13
        td 1st Apr, 2013
        td Mr. Client Name
        td C/o Dual Assoc
        td C/S No. 1004/2012, Suit No.1400/2009
        td Some entity/company name vs some other entity/company
        td Holding conference and Appearance
        td 80000
        td 80000
        td 0
        td 7/8/13
        td 910291
        td 29/7/2013
        td Some Bank
        td Dual Assoc
