extends layout

block content
  nav.navbar.navbar-default.default-margins(role='navigation')
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') #{appname}
      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        ul.nav.navbar-nav
          li.active
            a(href='javascript:void(0)') Accounts
          li
            a(href='javascript:void(0)') Contacts
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle(href='javascript:void(0)', data-toggle='dropdown')
              span.glyphicon.glyphicon-user
              span &nbsp;
              span Viraj Chitnis
              span &nbsp;
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='javascript:void(0)')
                  span.glyphicon.glyphicon-cog
                  span &nbsp;
                  span Account settings
              li
                a(href='javascript:void(0)')
                  span.glyphicon.glyphicon-log-out
                  span &nbsp;
                  span Logout
  #toolbar
    button.btn.btn-primary.btn-sm(title='Add an entry')
      span.glyphicon.glyphicon-plus
      span &nbsp;Add
    button.btn.btn-warning.btn-sm.default-left-margin(title='Edit an entry')
      span.glyphicon.glyphicon-pencil
      span &nbsp;Edit
    button.btn.btn-danger.btn-sm.default-left-margin(title='Delete an entry')
      span.glyphicon.glyphicon-trash
      span &nbsp;Delete
    .dropdown.float-right
      button#settings-dropdown.btn.btn-default.btn-sm.dropdown-toggle(type='button', data-toggle='dropdown')
        span.glyphicon.glyphicon-cog
        span &nbsp;Settings&nbsp;
        span.caret
      ul.dropdown-menu.dropdown-menu-right(role='menu', aria-labelledby='settings-dropdown')
        li#enableTableBordersButton(role='presentation')
          a(role='menuitem', tabindex='-1', href='javascript:void(0)')
            span Table borders
    .dropdown.float-right.default-right-margin
      button.btn.btn-default.btn-sm.dropdown-toggle(type='button', data-toggle='dropdown')
        span Sort by month&nbsp;
        span.caret
      ul.dropdown-menu.dropdown-menu-right(role='menu', aria-labelledby='settings-dropdown')
        li(role='presentation')
          a(role='menuitem', tabindex='-1', href='javascript:void(0)')
            span Apr '13
        li(role='presentation')
          a(role='menuitem', tabindex='-1', href='javascript:void(0)')
            span May '13
        li(role='presentation')
          a(role='menuitem', tabindex='-1', href='javascript:void(0)')
            span June '13
  #table-wrapper
    table#accountsTable.table.table-striped.table-hover
      tr
        th
        th Memo No.
        th Date
        th Partner
        th Solicitor/Client
        th Suit No.
        th Name of the party
        th Particulars
        th Fees (&#8377;)
        th Fees Recd.
        th Bal (&#8377;)
        th Dt of Recpt
        th Cheque No.
        th Cheque Dt.
        th Drawn on
        th Received from
      tr
        td
          input(type='checkbox', name='id', value='the_id')
